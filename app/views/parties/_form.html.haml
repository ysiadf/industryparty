= form_for @party do |f|
  -if @party.errors.any?
    #error_explanation
      %h2= "#{pluralize(@party.errors.count, "error")} prohibited this party from being saved:"
      %ul
        - @party.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :info
    = f.text_area :info
  .field
    = f.label :start
    = f.datetime_select :start
  .field
    = f.label :flier
    = f.file_field :flier
  .actions
    = f.submit 'Save'
